{
  "name": "react-chartjs-2",
  "version": "3.0.5",
  "description": "React components for Chart.js",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "author": "Jeremy Ayerst",
  "homepage": "https://github.com/reactchartjs/react-chartjs-2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/reactchartjs/react-chartjs-2.git"
  },
  "bugs": {
    "url": "https://github.com/reactchartjs/react-chartjs-2/issues"
  },
  "keywords": [
    "chart",
    "chart-js",
    "chart.js",
    "react-chartjs-2",
    "react chart.js",
    "react-chart.js"
  ],
  "scripts": {
    "emitDeclarations": "tsc --skipLibCheck --emitDeclarationOnly",
    "build": "rollup -c & yarn emitDeclarations",
    "prepublishOnly": "yarn build",
    "test:lint": "eslint 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "test:unit": "jest -c jest.config.json",
    "test:build": "yarn build",
    "test:size": "size-limit",
    "test": "yarn test:lint && yarn test:unit && yarn test:build && yarn test:size",
    "format": "prettier --write src",
    "predeploy": "cd example && yarn && yarn build",
    "deploy": "gh-pages -d example/build",
    "cleanPublish": "yarn test && clean-publish"
  },
  "dependencies": {
    "lodash": "^4.17.19"
  },
  "peerDependencies": {
    "chart.js": "^3.5.0",
    "react": "^16.8.0 || ^17.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@size-limit/preset-big-lib": "^6.0.3",
    "@swc/core": "^1.2.95",
    "@swc/helpers": "^0.2.13",
    "@swc/jest": "^0.2.4",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.150",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "browserslist": "^4.17.3",
    "chart.js": "^3.1.0",
    "clean-publish": "^3.4.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-import": "^2.25.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.17.0",
    "gh-pages": "^3.2.3",
    "jest": "^27.2.5",
    "jest-canvas-mock": "^2.2.0",
    "lint-staged": "^11.2.3",
    "prettier": "^2.0.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rollup": "^2.58.0",
    "rollup-plugin-swc": "^0.2.0",
    "simple-git-hooks": "^2.6.1",
    "size-limit": "^6.0.3",
    "typescript": "^4.4.3"
  },
  "files": [
    "dist"
  ]
}
